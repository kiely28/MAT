    <form id="form1" runat="server" class="container mt-4">

        <!-- Success Alert -->
        <asp:Panel ID="pnlSuccess" runat="server" CssClass="alert alert-success d-flex align-items-center alert-dismissible fade show" Visible="false">
            <i class="fa fa-check-circle me-2"></i>
            <div>Saved successfully.</div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </asp:Panel>

        <!-- Add New Button -->
        <asp:Button ID="btnAddNew" runat="server" Text=" Add New" CssClass="btn btn-primary mb-3"
            OnClientClick="resetForm(); showModal(); return false;" />

        <script>
            // Add icon dynamically since asp:Button doesn't support <i> tag directly
            window.onload = function () {
                var btn = document.getElementById('<%= btnAddNew.ClientID %>');
                if (btn && !btn.innerHTML.includes('fa-plus')) {
                    btn.innerHTML = '<i class="fa fa-plus me-1"></i>' + btn.innerHTML;
                }
            }
        </script>

        <!-- Modal -->
        <div class="modal fade" id="addNewModal" tabindex="-1" aria-labelledby="addNewModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    
                    <div class="modal-header">
                        <h5 class="modal-title" id="addNewModalLabel"><i class="fa fa-calendar-plus me-2"></i>Add New Meeting</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Title</label><span class="req">*</span>
