            }
        }

        // Add FA icon to Save button too
        window.onload = function () {
            var addBtn = document.getElementById('<%= btnAddNew.ClientID %>');
            if (addBtn && !addBtn.innerHTML.includes('fa-plus')) {
                addBtn.innerHTML = '<i class="fa fa-plus me-1"></i>' + addBtn.innerHTML;
